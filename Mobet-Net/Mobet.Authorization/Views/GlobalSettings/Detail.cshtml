@{
    Layout = null;
}

<div class="modal">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <form name="application" novalidate="novalidate" ng-submit="save()" class="form-horizontal">
                <div class="modal-header">
                    <h4 class="modal-title">{{title}}</h4>
                </div>
                <div class="modal-body">
                    <div class="row dashboard-header">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">@L("显示名称")</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="model.DisplayName" required placeholder="@L("显示名称")" />
                            </div>
                            <label class="col-sm-2 control-label">@L("名称")</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="model.Name" required placeholder="@L("名称")" />
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@L("分类")</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="model.Group" required placeholder="@L("分类")" />
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@L("值")</label>
                            <div class="col-sm-9">
                                <textarea rows="5" class="form-control" ng-model="model.Value" placeholder=">@L("值")"></textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@L("说明")</label>
                            <div class="col-sm-9">
                                <textarea rows="5" class="form-control" ng-model="model.Description" placeholder="@L("说明")"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">@("保存配置信息")</button>
                    <button type="reset" class="btn btn-default" ng-click="reset()">@("重置")</button>
                    <button type="button" class="btn btn-default" ng-click="close()">@("关闭")</button>
                </div>
            </form>
        </div>
    </div>
</div>